<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_relative_layout_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.dane.wicki.ui_demo_danewicki.RelativeLayoutDemoActivity">
    <TextView
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:height="60dp"
        android:width="60dp"
        android:layout_alignBottom="@+id/green"
        android:background="@color/darkorange"
        />
    <TextView
        android:id="@id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:height="60dp"
        android:width="60dp"
        android:layout_toStartOf="@+id/blue"
        android:background="@color/green"
        />
    <TextView
        android:id="@id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/red"
        android:height="60dp"
        android:width="60dp"
        android:background="@color/blue"
        />
    <TextView
        android:id="@id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:height="60dp"
        android:width="60dp"
        android:layout_toEndOf="@id/yellow"
        android:background="@color/red"
        />
    <TextView
        android:id="@+id/darkDotUpperLeftCorner"
        android:height="40dp"
        android:width="40dp"
        android:background="@color/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/red"
        android:layout_toEndOf="@id/yellow" />
    <TextView
        android:id="@+id/pinkDotBottomRight"
        android:height="30dp"
        android:width="30dp"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/green"
        android:layout_toLeftOf="@id/blue"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/iAmARelativeLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

</RelativeLayout>
